{
	"name": "ensphere/ensphere",
	"description": "",
	"keywords": ["framework"],
	"license": "MIT",
	"type": "project",
	"repositories": [
        {
            "type": "composer",
            "url": "http://modules.testing.pm"
        }
    ],
	"require": {
		"laravel/framework": "5.2.*",
		"illuminate/html": "5.*",
		"filp/whoops": "~1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Ensphere\\Ensphere\\": "app/",
			"EnsphereCore\\": "EnsphereCore/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
			"php artisan ensphere:update"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate",
			"php artisan ensphere:install"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
